# Railway/Postgres
DATABASE_URL=postgresql://user:password@host:5432/dbname
PGSSL=true

# CORS origin for frontend (Netlify)
CORS_ORIGIN=https://your-netlify-site.netlify.app

# AI configuration (OpenAI-compatible)
AI_API_URL=https://api.openai.com/v1/chat/completions
AI_API_KEY=sk-...
AI_MODEL=gpt-4o-mini

# Admin token for manual refresh endpoint
ADMIN_REFRESH_TOKEN=your-strong-shared-secret

# Cron expression for scheduled aggregation (default: every 15 minutes)
NEWS_CRON=*/15 * * * *

# Whether to run an aggregation on boot
RUN_INITIAL_SYNC=true
